<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Servlets Tutorial</display-name>


 <servlet>
    <servlet-name>UserRestControllerV1</servlet-name>
    <servlet-class>net.anna.eventapp.rest.UserRestControllerV1</servlet-class>
<!--    <load-on-startup>1</load-on-startup>-->
  </servlet>

    <servlet>
        <servlet-name>FileRestControllerV1</servlet-name>
        <servlet-class>net.anna.eventapp.rest.FileRestControllerV1</servlet-class>
<!--        <load-on-startup>1</load-on-startup>-->
    </servlet>

    <servlet>
        <servlet-name>EventRestControllerV1</servlet-name>
        <servlet-class>net.anna.eventapp.rest.EventRestControllerV1</servlet-class>
        <!--        <load-on-startup>1</load-on-startup>-->
    </servlet>

  <servlet-mapping>
    <servlet-name>UserRestControllerV1</servlet-name>
    <url-pattern>/UserRestControllerV1</url-pattern>
  </servlet-mapping>

    <servlet-mapping>
        <servlet-name>FileRestControllerV1</servlet-name>
        <url-pattern>/FileRestControllerV1</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EventRestControllerV1</servlet-name>
        <url-pattern>/EventRestControllerV1</url-pattern>
    </servlet-mapping>

  </web-app>